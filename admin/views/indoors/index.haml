.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:indoors, :index)
      %li=link_to pat(:new), url(:indoors, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:indoors)
    .inner
      %table.table
        %tr
          %th.first=mat(:indoor, :id)
          %th=mat(:indoor, :name)
          %th=mat(:indoor, :description)
          %th.last="&nbsp;"
        -@indoors.each do |indoor|
          %tr
            %td.first=indoor.id
            %td=indoor.name
            %td=indoor.description
            %td.last
              =button_to pat(:edit), url(:indoors, :edit, :id => indoor.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:indoors, :destroy, :id => indoor.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
