.group
  =f.label :name
  =f.error_message_on :name
  =f.text_field :name, :class => :text_field
  %span.description Ex: The indoor name

.group
  =f.label :description
  =f.error_message_on :description
  =f.text_area :description, :class => :text_area, :rows => 10
  %span.description Ex: The indoor description (body).

.group
  =f.label :position
  =f.error_message_on :position
  =f.text_field :position, :class => :text_field
  %span.description Ex: The indoor position.
    
.group.navform.wat-cf
  =f.submit pat(:save), :class => :button
  =f.submit pat(:cancel), :onclick => "window.location='#{url(:indoors, :index)}';return false", :class => :button
