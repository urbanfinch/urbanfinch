.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:indoors, :index)
      %li=link_to pat(:new), url(:indoors, :new)
      %li.active=link_to pat(:edit), url(:indoors, :edit, :id => @indoor.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:indoor)
    .inner
      -form_for :indoor, url(:indoors, :update, :id => @indoor.id), :method => :put, :class => :form do |f|
        =partial "indoors/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
