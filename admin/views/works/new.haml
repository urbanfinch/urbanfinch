.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:works, :index)
      %li.active=link_to pat(:new), url(:works, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:work)
