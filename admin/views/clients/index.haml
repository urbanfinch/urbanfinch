.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:clients, :index)
      %li=link_to pat(:new), url(:clients, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:clients)
    .inner
      %table.table
        %tr
          %th.first=mat(:client, :id)
          %th=mat(:client, :name)
          %th=mat(:client, :url)
          %th.last="&nbsp;"
        -@clients.each do |client|
          %tr
            %td.first=client.id
            %td=client.name
            %td=client.url
            %td.last
              =button_to pat(:edit), url(:clients, :edit, :id => client.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:clients, :destroy, :id => client.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
