.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:people, :index)
      %li=link_to pat(:new), url(:people, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:people)
    .inner
      %table.table
        %tr
          %th.first=mat(:person, :id)
          %th=mat(:person, :name)
          %th=mat(:person, :bio)
          %th=mat(:person, :email)
          %th.last="&nbsp;"
        -@people.each do |person|
          %tr
            %td.first=person.id
            %td=person.name
            %td=truncate(person.bio, :length => 25)
            %td=person.email
            %td.last
              =button_to pat(:edit), url(:people, :edit, :id => person.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:people, :destroy, :id => person.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
