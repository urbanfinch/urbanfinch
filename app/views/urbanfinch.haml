      .container
        .inner_header
          %h1 THE&nbsp;&nbsp;CONTACTS
          %nav
        .inner_body
          .segment
            .left
              %h2 HIRE&nbsp;&nbsp;THE&nbsp;&nbsp;FINCH
              %address
                %span{:class => 'bold'} Urban Finch
                %br
                2128 N 121st St
                %br
                Omaha NE, 68164
              %p
                %a{:href => 'tel:1-402-910-0680', :title => 'Call us!'} 402.910.0680
                %br
                %a{:href => 'tel:1-402-917-7059', :title => 'Call us!'} 402.917.7059
              %p
                %a{:href => 'mailto:thefinch@urbanfinch.com', :title => 'Send us mail!'} thefinch@urbanfinch.com
